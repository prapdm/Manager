@model Manager.Models.PageResult<Manager.Models.UserDto>
@addTagHelper *, LazZiya.TagHelpers
@addTagHelper *, Vereyon.Web.FlashMessage
@{
    ViewBag.Title = "Users";
    ViewData["SortDirection"] = Context.Request.Query["SortDirection"] == "DESC" ? "ASC" : "DESC";
    ViewData["searchPhrase"] = String.IsNullOrEmpty(Context.Request.Query["searchPhrase"]) ? "" : Context.Request.Query["searchPhrase"];

}
<!-- Begin Page Content -->
<div class="container-fluid">
    <flash bootstrap-version="3" />
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">System Users</h6>
        </div>



        <div class="card-body">

            <div class="row mb-3">
                <div class="col">
                    <a asp-action="Create" class="btn btn-success  btn-icon-split btn-sm">
                        <span class="text">Create New</span>
                    </a>
                </div>
                <div class="col-auto">



                    @using (Html.BeginForm("Get", "Users", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" }))
                    {
                        @Html.ValidationSummary(true)

                        <div class="input-group">
                            @Html.TextBox("searchPhrase", "", new { @class = "form-control bg-light border-0 small", @placeholder = "Search for..." })

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>

                        </div>

                    }
                </div>
            </div>



            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th><a asp-action="Get" asp-route-searchPhrase="@ViewData["searchPhrase"]" asp-route-SortBy="Id" asp-route-SortDirection="@ViewData["SortDirection"]">Id</a></th>
                            <th><a asp-action="Get" asp-route-searchPhrase="@ViewData["searchPhrase"]" asp-route-SortBy="Name" asp-route-SortDirection="@ViewData["SortDirection"]">Name</a></th>
                            <th><a asp-action="Get" asp-route-searchPhrase="@ViewData["searchPhrase"]" asp-route-SortBy="Surname" asp-route-SortDirection="@ViewData["SortDirection"]">Surname</a></th>
                            <th><a asp-action="Get" asp-route-searchPhrase="@ViewData["searchPhrase"]" asp-route-SortBy="Email" asp-route-SortDirection="@ViewData["SortDirection"]">Email</a></th>
                            <th><a asp-action="Get" asp-route-searchPhrase="@ViewData["searchPhrase"]" asp-route-SortBy="Role" asp-route-SortDirection="@ViewData["SortDirection"]">Role</a></th>
                            <th><a asp-action="Get" asp-route-searchPhrase="@ViewData["searchPhrase"]" asp-route-SortBy="IsActive" asp-route-SortDirection="@ViewData["SortDirection"]">Is Active?</a></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Items)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => user.Id)</td>
                                <td>@Html.DisplayFor(modelItem => user.Name)</td>
                                <td>@Html.DisplayFor(modelItem => user.Surname)</td>
                                <td>@Html.DisplayFor(modelItem => user.Email)</td>
                                <td>@Html.DisplayFor(modelItem => user.Role.Name)</td>
                                <td>@Html.DisplayFor(modelItem => user.IsActive)</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-success  btn-icon-split btn-sm">
                                        <span class="text">Details</span>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning  btn-icon-split btn-sm">
                                        <span class="text">Edit</span>
                                    </a>

                                    <form asp-route-id="@user.Id" asp-action="Delete" class="d-none d-sm-inline-block form-inline mr-auto" asp-route-id="@user.Id"
                                          onclick="return confirm('Are you sure you want to delete this?')">
                                        <button type="submit" class="btn btn-danger   btn-icon-split btn-sm">
                                            <span class="text">Delete</span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

            <paging total-records="@Model.TotalItemsCount"
                    page-no="Model.PageNumber"
                    page-size="Model.PageSize"
                    show-prev-next="true"
                    show-first-last="true"
                    show-total-pages="false"
                    show-total-records="false"
                    show-page-size-nav="false"
                    show-gap="false"
                    query-string-key-page-no="PageNumber"
                    query-string-key-page-size="PageSize">
            </paging>
        </div>




    </div>

</div>

@section Scripts
{
    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>



    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
}