@model Manager.Models.RegisterUserDto
@addTagHelper *, Vereyon.Web.FlashMessage
@{
    ViewData["Title"] = "Email verification";
}
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <flash bootstrap-version="3" />

                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Email verification</h1>
                                </div>
                                @Html.ValidationSummary(true)
                                @using (Html.BeginForm("VeryfiyEmail", "Account", FormMethod.Post))
                                {

                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-user", @type = "email", @placeholder = "Enter Email Address..." })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.VerifcationCode, new { @class = "form-control form-control-user", @placeholder = "Verifcation code" })
                                        @Html.ValidationMessageFor(m => m.VerifcationCode, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Verify
                                    </button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>